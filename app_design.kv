<CreateNoticeScreen>:
    name: "CreateNoticeScreen"
    MDBoxLayout:
        orientation: 'vertical'

        MDGridLayout:
            rows: 3
            cols: 1
            padding: 50, 15

            MDTextField:
                id: notice_title
                size_hint_y: 0.1
                hint_text: 'type notice title'
                multiline: False
                max_text_length: 250
                line_color_focus: utils.get_color_from_hex("#fc7b03")
                mode: 'rectangle'

            MDTextField:
                id: notice_textfield
                size_hint_y: 0.8
                hint_text: 'type notice here'
                multiline: True
                max_text_length: 990
                mode: 'rectangle'

            MDGridLayout:
                cols: 2
                rows: 1
                size_hint_y: 0.1

                MDRaisedButton:
                    text: "Create"
                    on_release:
                        root.create_notice(notice_title.text, notice_textfield.text)

                MDRaisedButton:
                    text: "Clear"
                    on_release:
                        notice_title.text = ''
                        notice_textfield.text = ''

